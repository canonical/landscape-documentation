{
    "plugins": {
        "selectively_enable_rules": true,
        "heading-style": {
            "enabled": true,
            "style": "atx"
        },
        "no-missing-space-atx": {
            "enabled": true
        },
        "heading-start-left": {
            "enabled": true
        },
        "no-trailing-punctuation": {
            "enabled": true,
            "punctuation": ".,;。，；"
        },
        "blanks-around-fences": {
            "enabled": true,
            "list_items": false
        },
        "blanks-around-lists": {
            "enabled": true
        },
        "hr-style": {
            "enabled": true
        },
        "no-empty-links": {
            "enabled": true
        },
        "no-alt-text": {
            "enabled": true
        }
    },
    "extensions": {
        "front-matter" : {
            "enabled" : true
        }
    }
}
